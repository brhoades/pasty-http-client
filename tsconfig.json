{
  "compilerOptions": {
    "target": "ES5",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2016",
      "es2016.array.include",
      "es2015",
      "scripthost"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "actions": ["./src/actions"],
      "css": ["./src/assets"],
      "sagas": ["./src/sagas"],
      "components": ["./src/components"],
      "containers": ["./src/containers"],
      "helpers": ["./src/helpers"],
      "reducers": ["./src/reducers"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
