{
  "compilerOptions": {
    "target": "ES5",
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "lib": [
      "dom",
      "es2016",
      "es2016.array.include",
      "es2015",
      "scripthost"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "actions/*": ["./src/actions/*"],
      "css/*": ["./src/assets/*"],
      "sagas/*": ["./src/sagas/*"],
      "components/*": ["./src/components/*"],
      "middleware/*": ["./src/middleware/*"],
      "helpers/*": ["./src/helpers/*"],
      "reducers/*": ["./src/reducers/*"],
      "pages/*": ["./src/pages/*"],
      "configfile": ["./config"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
